@{
    ViewBag.Title = "Tìm kiếm món ăn";
    Layout = "~/Views/Shared/_LayoutCuisine.cshtml";
}

@section styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $('.select2').select2();

            $('#btn-chay-submit').click(function () {
                $('#txt-chay').val('true');
            });
        });
    </script>
}
<div class="container">
    <form method="post" action="/search/search">
        <div class="form-group text-center">
            <img src="~/Content/Images/cooking-logo.png" width="150" alt="Cooking logo" title="Cooking logo" />
        </div>
        <div class="form-group">
            <input type="hidden" name="chay" value="false" id="txt-chay"/>
            <select name="keyword" class="form-control select2">
                @foreach (string key in ViewBag.dsKhuVuc.Keys)
                {
                    <option value="@key">@ViewBag.dsKhuVuc[key]</option>
                }
            </select>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">&nbsp;&nbsp;&nbsp;Món ăn&nbsp;&nbsp;&nbsp;</button> &nbsp;&nbsp;
            <button type="submit" class="btn btn-default" id="btn-chay-submit">Món chay</button>
        </div>
    </form>
</div>